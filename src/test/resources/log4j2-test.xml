<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="error" name="test-logging-configuration">
  <Appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
    </Console>
  </Appenders>
  <Loggers>

    <!-- switch level to "error" if you want to see the exceptions thrown during tests -->
    <Root level="off">
     <AppenderRef ref="Console" />
    </Root>

    <!-- switch level to "debug" if you want to see the tiles created during tests -->
    <Logger name="org.orekit.rugged.raster.TilesCache" level="off">
      <AppenderRef ref="Console" />
    </Logger>

  </Loggers>
</Configuration>
